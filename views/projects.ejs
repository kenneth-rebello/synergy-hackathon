<body>
    <div style="background-color: midnightblue">  
        <div class="bg-top navbar-light">
            <div class="container">
            <div class="row no-gutters d-flex align-items-center align-items-stretch">
                <div class="col-md-4 d-flex align-items-center py-4">
                <a class="navbar-brand" style="color: whitesmoke" href="/">Project Hub<span>FR.CRCE</span></a>
                </div>
            </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container d-flex align-items-center px-4">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu" style="font-size: 30px">Menu</span>
            </button>
            <% if(logged) { %>
            <form action="/projects/search" method="post" class="searchform order-lg-last">
                <div class="form-group d-flex">
                <input type="text" name="keywords" class="form-control pl-3" placeholder="Search">
                <button type="submit" placeholder="" class="form-control search"><span class="ion-ios-search"></span></button>
                </div>
            </form>
            <% } %>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a href="/" class="nav-link pl-0" style="font-size: 20px">Home</a></li>
                <% if(logged) { %>                    
                    <% if (role == 'admin'){ %>
                    <li class="nav-item" ><a href="/" class="nav-link" style="color: gold; font-size: 20px"><%= name %></a></li>
                    <li class="nav-item active"><a href="/projects" class="nav-link" style="font-size: 20px">Projects</a></li>
                    <li class="nav-item"><a href="/report/generate" class="nav-link" style="font-size: 20px">Generate Report</a></li>
                    <li class="nav-item"><a href="/logout" class="nav-link" style="font-size: 20px">Logout</a></li>
                    <% }else{ %>
                    <li class="nav-item" ><a href="/" class="nav-link" style="color: gold; font-size: 20px"><%= name %></a></li>
                    <li class="nav-item active"><a href="/projects" class="nav-link" style="font-size: 20px">Projects</a></li>
                    <li class="nav-item"><a href="/upload" class="nav-link" style="font-size: 20px">Upload</a></li>
                    <li class="nav-item"><a href="/logout" class="nav-link" style="font-size: 20px">Logout</a></li>
                    <% }} else{ %>
                    <li class="nav-item active"><a href="/projects" class="nav-link" style="font-size: 20px">Projects</a></li>
                    <li class="nav-item"><a href="/login" class="nav-link" style="font-size: 20px">Login</a></li>
                    <li class="nav-item"><a href="/register" class="nav-link" style="font-size: 20px">Register</a></li>
                    <% } %>
                </ul>
            </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg bg-light ftco-navbar-light" id="ftco-navbar">
            <div class="container d-flex align-items-center px-4 my-4" style="background-color: orangered; border-radius: 50px">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".filter-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu" style="font-size: 20px">Filter</span>
            </button>
            <div class="collapse navbar-collapse filter-nav" id="ftco-nav">
                <ul class="navbar-nav mr-auto">
                    <li><h1 style="font-size:30px; padding:5px; ">Filters:</h1></li>
                    <form action="/projects/filter" method="POST">
                        <li class="nav-item" style="color:midnightblue; font-size:25px; display:inline">      
                            <span>By Department</span>
                            <select name="dept" style="padding:10px">
                                <option value="">NONE</option>
                                <option value="InfoTech">IT</option>
                                <option value="Computers">COMPS</option>
                                <option value="Electronics">ELEX</option>
                                <option value="Production">PROD</option>
                                <option value="Mechanical">MECH</option>
                            </select>   
                        </li>
                        <li  class="nav-item" style="color:midnightblue; font-size:25px; display:inline">
                            <span>By Year</span>
                            <select name="year"style="padding:10px">
                                <option value="">NONE</option>
                                <option value="1">I</option>
                                <option value="2">II</option>
                                <option value="3">III</option>
                                <option value="4">IV</option>
                            </select>    
                        </li>
                        <li  class="nav-item" style="color:midnightblue; font-size:25px; display:inline">
                            <span>By Domain</span>
                            <select name="domain"style="padding:10px">
                                <option value="">NONE</option>
                                <option value="Web">WEB</option>
                                <option value="ML">ML</option>
                                <option value="IOT">IOT</option>
                                <option value="DSA">DSA</option>
                            </select>    
                        </li>
                        <li class="nav-item" style="padding-left :30px; display:inline">
                            <input class="btn " type="submit" value="Search" style="background-color: midnightblue; color:white">
                        </li>
                    </form>
                </ul>
            </div>
            </div>
        </nav>


        <!-- END nav -->

<section class="ftco-section bg-light contact-section">
    <div class="container">
    <% function displayer(project, creator){ %>
        <% let{ _id, dateOfUpload, title, desc, domain} = project %>
        <div class="col-md-6 col-lg-4 ftco-animate" style="padding: 10px">
            <div class="blog-entry" style="align-self: left">
                <a href="/projects/<%= _id %>" class="block-20 d-flex align-items-end" style="background-image: url('/styles/images/image_6.jpg');">
                <div class="meta-date text-center p-2">
                    <% let months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'] %>
                    <span class="day"><%= dateOfUpload.getDate() %></span>
                    <span class="mos"><%= months[dateOfUpload.getMonth()] %></span>
                    <span class="yr"><%= dateOfUpload.getFullYear() %></span>
                </div>
                </a>
                <div class="text bg-white p-4">
                    <h1 class="heading"><a href="/projects/<%= _id %>"><strong><%= title %></strong></a></h1>
                    <p>
                        <%= desc %>
                    </p>
                    <div class="d-flex ">
                        <p class="mb-0" >
                            <span style="color: orangered;">Creator:</span>
                            <a href="#!" style="color:black"><%= creator.name %></a>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="mb-0" >
                            <span style="color: orangered;">Domain:</span>
                            <a href="#!" style="color:black"><%= domain %></a>
                        </p>
                    </div>
                    <div class="d-flex align-items-left mt-4">
                            <p class="mb-0"><a href="/projects/<%= _id %>" class="btn btn-primary">Read More<span class="ion-ios-arrow-round-forward"></span></a></p>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
<% if (msg!= ''){ %>
    <label style="background-color: orangered; color:whitesmoke; font-size: 25px" class="px-3 py-3"><%= msg %></label>
    <% if(logged && role != 'admin'){ %>
        <a href="/upload"></a>
<% }} %>
<% if(projects){ %>
    
    <div class="row d-flex align-items-stretch no-gutters">
        <% projects.forEach(function(each){
            let { uploader} = each
            displayer(each, uploader);
        }) %>
    </div>
    <a href="/projects/report" class="btn btn-primary">Generate Report</a>
<% } %>
    </div>
</section>

    
