  <body>
  <div style="background-color: midnightblue;">
    <div class="bg-top navbar-light" style="width: 100%">
      <div class="container">
        <div class="row no-gutters d-flex align-items-center align-items-stretch">
          <div class="col-md-4 d-flex align-items-center py-4">
            <a class="navbar-brand" style="color: whitesmoke" href="/">Project Hub<span>FR.CRCE</span></a>
          </div>
          <div class="col-lg-8 d-block">
            <div class="row d-flex">
            </div>
          </div>
        </div>
      </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ftco-navbar-light" id="ftco-navbar" style="width:100%">
      <div class="container d-flex align-items-center px-4">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="oi oi-menu" style="font-size: 20px">Menu</span>
        </button>
        <div class="collapse navbar-collapse" id="ftco-nav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a href="/" class="nav-link pl-0" style="font-size: 20px">Home</a></li>
            <li class="nav-item"><a href="/projects" class="nav-link" style="font-size: 20px">Projects</a></li>
            <li class="nav-item "><a href="/login" class="nav-link" style="font-size: 20px">Login</a></li>
            <li class="nav-item active"><a href="/register" class="nav-link" style="font-size: 20px">Register</a></li>
          </ul>
        </div>
      </div>
      <br>
    </nav>

      <!-- END nav -->
  
		<section class="ftco-section ftco-no-pt ftco-no-pb contact-section">
			<div class="container" >
				<div class="row d-flex align-items-stretch no-gutters">
					<div class="col-md-12 p-4 p-md-5 order-md-last bg-light">
            <% if(msg != ''){ %>
              <label style="background-color: orangered; color:whitesmoke; font-size: 25px"><%= msg %></label>
            <% } %>
            <a href="/login" style="text-decoration: underline; font-size: 30px">Already have an account? Login here</a>
						<form action='/register' method="post">
              <table cellpadding="10">
                <tr>
                  <div class="form-group">
                    <td><span>Username</span></td>
                    <td><input type="text" name="username" style="border-radius: 25px; padding: 10px" placeholder="Enter username" required></td>
                    <td><span>*Students kindly use your designated roll number</span></td> 
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><span>Password</span></td>
                    <td><input type="password" name="password" style="border-radius: 25px; padding: 10px" placeholder="Enter password" required></td>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                      <td><span>Confirm Password</span></td>
                      <td><input type="password" name="password_c" style="border-radius: 25px; padding: 10px" placeholder="Enter password again" required></td>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><span>Name</span></td>
                    <td><input type="text" name="name" style="border-radius: 25px; padding: 10px" placeholder="Enter your name" required></td>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><span>About yourself</span></td>
                    <td><textarea type="text" name="about" style="border-radius: 25px; padding: 10px; width: 500px; height:150px;"></textarea></td>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><span>Choose Account Type</span></td>
                    <td><select name="role" class="btn btn-primary" required>
                      <option value="student">Student</option>
                      <option value="teacher">Teacher</option>
                    </select></td>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><span>Select Your Department</span></td>
                    <td><select name="dept" class="btn btn-primary" required>
                      <option value="InfoTech">IT</option>
                      <option value="Computers">COMPS</option>
                      <option value="Electronics">ELEX</option>
                      <option value="Production">PROD</option>
                      <option value="Mechanical">MECH</option>
                    </select></td>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><span>Select Current Year</span>
                    <td><select name="year" class="btn btn-primary" required>
                      <option value="FE">FE</option>
                      <option value="SE">SE</option>
                      <option value="TE">TE</option>
                      <option value="BE">BE</option>
                      <option value="ALUMNI">ALUMNI</option>
                      <option value="N/A">N/A</option>
                    </select></td>
                  </div>
                </tr>
              </table>              
              <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary py-3 px-5">
              </div>
            </form>
            
      </div>
      </div>
    </div>
    </section>
    <br>
    <br>

  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>
</div>

  <script>
  
   $('input').focus(function(){
    $(this).css('background-color','orange');
  });

  $('input').blur(function(){
    $(this).css('background-color','white');
  }); 
  
  </script>
